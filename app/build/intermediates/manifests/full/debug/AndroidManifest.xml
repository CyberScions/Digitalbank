<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.appifie.digitalbank"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.Base.Light" >
        <activity
            android:name="com.appifie.digitalbank.SplashScreen"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.appifie.digitalbank.DigitalHome"
            android:label="@string/app_name"
            android:theme="@style/Theme.Base.AppCompat.Light" >
            <intent-filter>
                <action android:name="android.com.appifie.DigitalHome" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.appifie.digitalbank.AccountInfo"
            android:label="@string/app_name"
            android:theme="@style/Theme.Base.AppCompat.Light" >
            <intent-filter>
                <action android:name="android.com.appifie.AccountInfo" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.appifie.digitalbank.MoneyTransfer"
            android:label="@string/app_name"
            android:theme="@style/Theme.Base.AppCompat.Light" >
            <intent-filter>
                <action android:name="android.com.appifie.MoneyTransfer" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>